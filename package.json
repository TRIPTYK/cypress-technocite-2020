{
  "name": "tpk-react-base",
  "version": "0.0.1",
  "description": "TPK Boilerplate for ReactJS apps",
  "main": "index.js",
  "author": "Gilles BERTRAND",
  "license": "MIT",
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^3.0.0",
    "@reach/router": "^1.3.4",
    "@tailwindcss/ui": "^0.6.2",
    "autoprefixer": "^9.8.6",
    "postcss-modules": "^3.2.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "tailwindcss": "^1.8.10"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.5",
    "@imaginary-cloud/eslint-config-react": "1.0.1",
    "@testing-library/cypress": "^7.0.1",
    "cypress": "^5.6.0",
    "eslint": "^7.9.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "json-server": "^0.16.2",
    "json-server-auth": "^2.0.2",
    "jwt-decode": "^3.1.1",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.1.2",
    "start-server-and-test": "^1.11.5",
    "test-data-bot": "^0.8.0"
  },
  "scripts": {
    "clear": "rm -rf .cache/ dist/",
    "dev:front": "parcel src/index.html",
    "dev:back": "json-server-auth ./server/db.json",
    "dev": "npm-run-all --parallel dev:*",
    "build": "parcel build src/index.html",
    "format": "prettier --write \"src/**/*.{js,jsx}\"",
    "lint": "eslint \"src/**/*.{js,jsx}\" --quiet",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:e2e:dev": "start-server-and-test dev http://localhost:1234 cy:open",
    "test:e2e:run": "start-server-and-test dev http://localhost:1234 cy:run",
    "cy:open": "cypress open",
    "cy:run": "cypress run"
  },
  "eslintConfig": {
    "extends": "@imaginary-cloud/react"
  },
  "prettier": "@imaginary-cloud/prettier-config"
}
